c-container
  .container
    slot

  script.
    import anime from 'animejs'
    export default {
      onMounted() {
        anime({
          targets: this.$$('.box'),
          loop:true,
          translateX: 20,
          direction: 'alternate',
          easing: 'linear',
          duration: 500,
          delay: anime.stagger(600)
        })
      }
    }

  style(type="stylus").
    .container
      background-color #23444f
      display -webkit-box
      display -ms-flexbox
      display flex
      -webkit-box-align center
      -ms-flex-align center
      align-items center
      -ms-flex-pack distribute
      justify-content space-around
      -ms-flex-wrap wrap
      flex-wrap wrap
      width 80vw
      height 300px
      margin-left 6vw
      -webkit-transform rotateX(23deg) rotateZ(-9deg) rotateY(15deg) scale3d(1, 1, -0.9)
      transform rotateX(23deg) rotateZ(-9deg) rotateY(15deg) scale3d(1, 1, -0.9)
